#email-input {
	border:0;
	width:263px;
	height:18px;
	padding:12px 20px;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
	-o-radius:3px;
	-ms-border-radius:3px;
	border-radius:3px;
	margin:0;font-size:18px;
	-webkit-box-shadow:0 0 3px rgba(147,152,157,.75);
	-moz-box-shadow:0 0 3px rgba(147,152,157,.75);
	-o-box-shadow:0 0 3px rgba(147,152,157,.75);
	-ms-box-shadow:0 0 3px rgba(147,152,157,.75);
	box-shadow:0 0 3px rgba(147,152,157,.75);
	color:#b5babe;font-family:'Proxima Nova';
	font-size:18px;line-height:18px;text-transform:uppercase;
	-webkit-font-smoothing:antialiased;-webkit-appearance:none
}


#email-input:focus, #email-input:active
{
    color:#606060;
    -webkit-box-shadow:0 1px 0 1px rgba(255,255,255,.5),inset 0 0 3px rgba(0,0,0,.4);
    -moz-box-shadow:0 1px 0 1px rgba(255,255,255,.5),inset 0 0 3px rgba(0,0,0,.4);
    -o-box-shadow:0 1px 0 1px rgba(255,255,255,.5),inset 0 0 3px rgba(0,0,0,.4);
    -ms-box-shadow:0 1px 0 1px rgba(255,255,255,.5),inset 0 0 3px rgba(0,0,0,.4);
    box-shadow:0 1px 0 1px rgba(255,255,255,.5),inset 0 0 3px rgba(0,0,0,.4);
    outline:0;
    text-transform:uppercase
}

.submit {
    vertical-align: top;
    position: right;
    float: right;
    height: 42px;
    padding: 0 20px;
    border: 0;
    outline: 0;
	background: -moz-linear-gradient(
		top,
		#2f5ed3 0%,
		#1c3d8f);
	background: -webkit-gradient(
		linear, left top, left bottom, 
		from(#2f5ed3),
		to(#1c3d8f));   
	border-top: 1px #2564be solid;
    border-right: 1px #1a4c93 solid;
    border-bottom: 1px #0d3061 solid;
    border-left: 1px #1a4c93 solid;
    -webkit-box-shadow: 0 1px 1px rgba(0,0,0,.3),inset 0 1px 0 #4997ff;
    -moz-box-shadow: 0 1px 1px rgba(0,0,0,.3),inset 0 1px 0 #4997ff;
    -o-box-shadow: 0 1px 1px rgba(0,0,0,.3),inset 0 1px 0 #4997ff;
    -ms-box-shadow: 0 1px 1px rgba(0,0,0,.3),inset 0 1px 0 #4997ff;
    box-shadow: 0 1px 1px rgba(0,0,0,.3),inset 0 1px 0 #4997ff;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    -o-radius: 3px;
    -ms-border-radius: 3px;
    border-radius: 3px;
    color: #fff;
    font-family: 'Proxima Nova Bold';
    font-weight: normal;
    -webkit-font-smoothing: antialiased;
    text-shadow: 0 -1px 0 rgba(0,0,0,.4);
    font-size: 13px;
    cursor: pointer;
}
.submit:hover {
	background: -moz-linear-gradient(
		top,
		#376EF4 0%,
		#1F45A4);
	background: -webkit-gradient(
		linear, left top, left bottom, 
		from(#376EF4),
		to(#1F45A4));   
}
.submit:active {
    border-top: 1px #0f2749 solid;
    border-right: 1px #0e2b54 solid;
    border-bottom: 1px #0d2e5f solid;
    border-left: 1px #0e2b54 solid;
    -webkit-box-shadow: 0 1px 0 0 #fff;
    -moz-box-shadow: 0 1px 0 0 #fff;
    -o-box-shadow: 0 1px 0 0 #fff;
    -ms-box-shadow: 0 1px 0 0 #fff;
    box-shadow: 0 1px 0 0 #fff;
	background: -moz-linear-gradient(
		top,
		#1A3A8B 0%,
		#10214A);
	background: -webkit-gradient(
		linear, left top, left bottom, 
		from(#1A3A8B),
		to(#10214A));     -webkit-transform: translatey(1px);
    -moz-transform: translatey(1px);
    -o-transform: translatey(1px);
    -ms-transform: translatey(1px);
    transform: translatey(1px);
}


